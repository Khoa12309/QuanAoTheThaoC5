@model IEnumerable<QuanAoTheThaoC5.Models.ProductMaterial>

@{
    ViewData["Title"] = "ProductMaterialView";
}

<h1>ProductMaterialView</h1>

<p>

    <button class="btn btn-primary"> <a asp-action="CreateProductMaterial" class="text-decoration-none ; text-light">Create New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                    @Html.ActionLink("Edit", "UpdateProductMaterial", new { id=item.Id},new{@Class="btn btn-primary"})

                    @Html.ActionLink("Delete", "DeleteProductMaterial", new { id=item.Id},new{@Class="btn btn-danger"} )

            </td>
        </tr>
}
    </tbody>
</table>
