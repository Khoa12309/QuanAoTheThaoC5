@model IEnumerable<QuanAoTheThaoC5.Models.Role>

@{
    ViewData["Title"] = "RoleView";
}

<h1>RoleView</h1>

<p>
   
    <button class="btn btn-primary"> <a asp-action="CreateRole" class="text-decoration-none ; text-light">Create New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
 
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
         

                <td>



                    @Html.ActionLink("Edit", "UpdateRole", new { id=item.Id},new{@Class="btn btn-primary"})

                    @Html.ActionLink("Delete", "DeleteRole", new { id=item.Id},new{@Class="btn btn-danger"} )
                </td>
        </tr>
}
    </tbody>
</table>
