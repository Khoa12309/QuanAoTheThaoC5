@model IEnumerable<QuanAoTheThaoC5.Models.User>

@{
    ViewData["Title"] = "UserView";
}

<h1>UserView</h1>

<p>
    <a asp-action="CreateUser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
