@model IEnumerable<QuanAoTheThaoC5.Models.Size>

@{
    ViewData["Title"] = "SizeView";
}

<h1>SizeView</h1>

<p>
    <a asp-action="CreateSize">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SizeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSize", new { id=item.SizeId }) |
                    @Html.ActionLink("Delete", "DeleteSize", new { id=item.SizeId  })
            </td>
        </tr>
}
    </tbody>
</table>
