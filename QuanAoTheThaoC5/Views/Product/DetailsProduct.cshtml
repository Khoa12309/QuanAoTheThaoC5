@model QuanAoTheThaoC5.Models.Product

@{
    ViewData["Title"] = "DetailsProduct";
}

<link rel="stylesheet" href="~/css/DetailsProduct.css" asp-append-version="true" />

<div class="sp-detail">
    <div class="sp-img"
         style="
              background-color: ghostwhite;
              border: 2px solid white;
              width: 498px;
              border-radius: 2px;
              height: 500px;
              margin-top: 64px;
              margin-left: -30px;
              margin-right: 10px;
            ">
        @{
            foreach (var item in ViewBag.Limg)
            {
                if (item.IDProduct == Model.Id)
                {
                    <img src="~/themes/img/@item.URl" alt="" style="margin: 8px;width=50%;height=50%"/>
                    //<dd class="col-sm-10">
                    //    <img src="~/themes/img/@item.URl" style="width:100%" />
                    //</dd>
                }
            }
        }

    </div>
    <div class="sp-infor"
         style="
              background-color: ghostwhite;
              border: 2px solid white;
              width: 50%;
              margin-right: 150px;
              border-radius: 2px;
              height: 50%;
              margin-top: 64px;
            ">
        <h3 style="font-size: 20px; padding-bottom: 10px; padding-left: 10px">
            Tên sản phẩm : @Html.DisplayFor(model => model.Name)
        </h3>
        <h3 style="font-size: 20px; padding-bottom: 10px; padding-left: 10px; color: red">Giá : @Html.DisplayFor(model => model.Price)</h3>
        <h3 style="font-size: 14px; padding-bottom: 10px; padding-left: 10px">Số lượng: @Html.DisplayFor(model => model.Quantity)</h3>

        <span>

            @if (Model.Status == 1)
            {
                <h3 style="font-size: 14px; padding-bottom: 10px; padding-left: 10px">Trạng thái: Còn Hàng</h3>
            }
            else
            {
                <h3 style="font-size: 14px; padding-bottom: 10px; padding-left: 10px">Trạng thái: Hết Hàng</h3>
            }
        </span>
        <h3 style="font-size: 14px; padding-bottom: 10px; padding-left: 10px">Mô tả: @Html.DisplayFor(model => model.Description)</h3>
        <div class="toptwo">
            <div class="btn-add">
             
                <button style="background-color: rgb(237, 70, 70); color: white"><a style="text-decoration:none;color:white" href="@Url.Action("AddToCart","Home",new {id=Model.Id,Soluong=1})"><b>Thêm vào giỏ</b> </a></button>
            </div>
            <div class="btn-mua">
                <button><b style="color: rgb(237, 70, 70)">Mua ngay</b></button>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
