@model QuanAoTheThaoC5.Models.ProductMaterialDetails

@{
    ViewData["Title"] = "UpdateProductMaterialDetails";
}

<h1>UpdateProductMaterialDetails</h1>

<h4>ProductMaterialDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProductMaterialDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label class="control-label">ProductMaterial</label>
                <select asp-for="IDProductMaterial" class="form-select" aria-label="Default select example">
